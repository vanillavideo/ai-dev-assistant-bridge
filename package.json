{
	"name": "ai-dev-assistant-bridge",
	"displayName": "AI Dev Assistant Bridge",
	"description": "Supercharge AI-assisted coding with auto-continue reminders, auto-approval, task management, and context injection for GitHub Copilot and other AI tools",
	"version": "0.9.7",
	"publisher": "coreyolson",
	"repository": {
		"type": "git",
		"url": "https://github.com/coreyolson/ai-dev-assistant-bridge.git"
	},
	"engines": {
		"vscode": "^1.96.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ai-dev-assistant-bridge.showStatus",
				"title": "AI Dev Assistant Bridge: Show Status"
			},
			{
				"command": "ai-dev-assistant-bridge.toggleAutoContinue",
				"title": "AI Dev Assistant Bridge: Toggle Auto-Continue"
			},
			{
				"command": "ai-dev-assistant-bridge.runNow",
				"title": "AI Dev Assistant Bridge: Run Now (Manual Trigger)"
			},
			{
				"command": "ai-dev-assistant-bridge.getPort",
				"title": "AI Dev Assistant Bridge: Get Current Port"
			},
			{
				"command": "ai-dev-assistant-bridge.changePort",
				"title": "AI Dev Assistant Bridge: Change Port"
			},
			{
				"command": "ai-dev-assistant-bridge.addTask",
				"title": "AI Dev Assistant Bridge: Add Task"
			},
			{
				"command": "ai-dev-assistant-bridge.listTasks",
				"title": "AI Dev Assistant Bridge: Manage Tasks"
			},
			{
				"command": "ai-dev-assistant-bridge.addGuidingDocument",
				"title": "AI Dev Assistant Bridge: Add Guiding Document"
			},
			{
				"command": "ai-dev-assistant-bridge.removeGuidingDocument",
				"title": "AI Dev Assistant Bridge: Remove Guiding Document"
			},
			{
				"command": "ai-dev-assistant-bridge.listGuidingDocuments",
				"title": "AI Dev Assistant Bridge: Manage Guiding Documents"
			}
		],
		"chatParticipants": [
			{
				"id": "ai-dev-assistant-bridge.agent",
				"fullName": "AI Dev Assistant Bridge",
				"name": "agent",
				"description": "Enhances AI-assisted coding with task management and auto-continue reminders",
				"isSticky": true
			}
		],
		"configuration": {
			"title": "AI Dev Assistant Bridge",
			"properties": {
				"aiDevAssistantBridge.port": {
					"type": "number",
					"default": 3737,
					"scope": "resource",
					"description": "HTTP server port (auto-assigned per window)"
				},
				"aiDevAssistantBridge.autoStart": {
					"type": "boolean",
					"default": true,
					"scope": "resource",
					"description": "Auto-start server on launch"
				},
				"aiDevAssistantBridge.autoContinue.enabled": {
					"type": "boolean",
					"default": false,
					"scope": "resource",
					"description": "Enable auto-continue reminders",
					"order": 0
				},
				"aiDevAssistantBridge.autoContinue.tasks.enabled": {
					"type": "boolean",
					"default": true,
					"scope": "resource",
					"description": "üìã Tasks: Continue with current tasks",
					"order": 10
				},
				"aiDevAssistantBridge.autoContinue.tasks.interval": {
					"type": "number",
					"default": 300,
					"scope": "resource",
					"description": "üìã Tasks interval (seconds)",
					"order": 11
				},
				"aiDevAssistantBridge.autoContinue.tasks.message": {
					"type": "string",
					"default": "Continue with current tasks",
					"scope": "resource",
					"description": "üìã Tasks message",
					"order": 12
				},
				"aiDevAssistantBridge.autoContinue.improvements.enabled": {
					"type": "boolean",
					"default": true,
					"scope": "resource",
					"description": "‚ú® Improvements: Code quality and optimizations",
					"order": 20
				},
				"aiDevAssistantBridge.autoContinue.improvements.interval": {
					"type": "number",
					"default": 600,
					"scope": "resource",
					"description": "‚ú® Improvements interval (seconds)",
					"order": 21
				},
				"aiDevAssistantBridge.autoContinue.improvements.message": {
					"type": "string",
					"default": "Focus on code improvements and optimizations",
					"scope": "resource",
					"description": "‚ú® Improvements message",
					"order": 22
				},
				"aiDevAssistantBridge.autoContinue.coverage.enabled": {
					"type": "boolean",
					"default": true,
					"scope": "resource",
					"description": "üß™ Coverage: Testing and validation",
					"order": 30
				},
				"aiDevAssistantBridge.autoContinue.coverage.interval": {
					"type": "number",
					"default": 900,
					"scope": "resource",
					"description": "üß™ Coverage interval (seconds)",
					"order": 31
				},
				"aiDevAssistantBridge.autoContinue.coverage.message": {
					"type": "string",
					"default": "Review code coverage and add tests where needed",
					"scope": "resource",
					"description": "üß™ Coverage message",
					"order": 32
				},
				"aiDevAssistantBridge.autoContinue.robustness.enabled": {
					"type": "boolean",
					"default": true,
					"scope": "resource",
					"description": "üõ°Ô∏è Robustness: Error handling and stability",
					"order": 40
				},
				"aiDevAssistantBridge.autoContinue.robustness.interval": {
					"type": "number",
					"default": 600,
					"scope": "resource",
					"description": "üõ°Ô∏è Robustness interval (seconds)",
					"order": 41
				},
				"aiDevAssistantBridge.autoContinue.robustness.message": {
					"type": "string",
					"default": "Prioritize code robustness and error handling",
					"scope": "resource",
					"description": "üõ°Ô∏è Robustness message",
					"order": 42
				},
				"aiDevAssistantBridge.autoContinue.cleanup.enabled": {
					"type": "boolean",
					"default": true,
					"scope": "resource",
					"description": "üßπ Cleanup: Remove unused code and files",
					"order": 50
				},
				"aiDevAssistantBridge.autoContinue.cleanup.interval": {
					"type": "number",
					"default": 1200,
					"scope": "resource",
					"description": "üßπ Cleanup interval (seconds)",
					"order": 51
				},
				"aiDevAssistantBridge.autoContinue.cleanup.message": {
					"type": "string",
					"default": "Cleanup unused files and dead code",
					"scope": "resource",
					"description": "üßπ Cleanup message",
					"order": 52
				},
				"aiDevAssistantBridge.autoContinue.commits.enabled": {
					"type": "boolean",
					"default": true,
					"scope": "resource",
					"description": "üíæ Commits: Save progress regularly",
					"order": 60
				},
				"aiDevAssistantBridge.autoContinue.commits.interval": {
					"type": "number",
					"default": 900,
					"scope": "resource",
					"description": "üíæ Commits interval (seconds)",
					"order": 61
				},
				"aiDevAssistantBridge.autoContinue.commits.message": {
					"type": "string",
					"default": "Commit your progress with clear messages",
					"scope": "resource",
					"description": "üíæ Commits message",
					"order": 62
				},
				"aiDevAssistantBridge.autoApproval.enabled": {
					"type": "boolean",
					"default": true,
					"scope": "resource",
					"description": "Enable auto-approval monitoring (requires manual console script setup)"
				},
				"aiDevAssistantBridge.autoApproval.autoInject": {
					"type": "boolean",
					"default": false,
					"scope": "resource",
					"description": "Automatically inject approval script on startup (experimental)"
				},
				"aiDevAssistantBridge.autoApproval.intervalMs": {
					"type": "number",
					"default": 2000,
					"scope": "resource",
					"description": "Auto-approval check interval in milliseconds"
				},
				"aiDevAssistantBridge.guidingDocuments": {
					"type": "array",
					"default": [],
					"scope": "resource",
					"description": "Project documents to include as AI context (architecture, conventions, etc.)",
					"items": {
						"type": "string"
					}
				},
				"aiDevAssistantBridge.guidingDocuments.maxSize": {
					"type": "number",
					"default": 50000,
					"scope": "resource",
					"description": "Maximum size (chars) for each guiding document to include in context"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "npm run check-types && npm run lint && node esbuild.js",
		"watch": "node esbuild.js --watch",
		"package": "npm run check-types && npm run lint && node esbuild.js --production",
		"check-types": "tsc --noEmit",
		"lint": "eslint src",
		"pretest": "npm run compile",
		"test": "node ./dist/test/runUnitTests.js",
		"test:unit": "npm run compile && node ./dist/test/runUnitTests.js",
		"test:integration": "npm run compile && node ./dist/test/runTest.js",
		"test:all": "npm run test:unit && npm run test:integration",
		"test:watch": "npm run watch & npm test",
		"test:coverage": "c8 --reporter=html --reporter=text --reporter=lcov --reporter=json-summary --exclude='dist/test/**' --exclude='**/node_modules/**' --exclude-after-remap npm run test:all",
		"coverage": "npm run test:coverage",
		"coverage:report": "open coverage/index.html",
		"coverage:report-detailed": "node scripts/coverage-report.js",
		"coverage:improve": "node scripts/coverage-improve.js",
		"coverage:quick-wins": "node scripts/coverage-improve.js --quick-wins",
		"coverage:untested": "node scripts/coverage-improve.js --untested",
		"coverage:analyze": "node scripts/coverage-improve.js --skip-tests",
		"coverage:file": "node scripts/coverage-improve.js --skip-tests --file"
	},
	"devDependencies": {
		"@types/fs-extra": "^11.0.4",
		"@types/mocha": "^10.0.10",
		"@types/node": "~22.x",
		"@types/vscode": "^1.96.0",
		"@typescript-eslint/eslint-plugin": "^8.25.0",
		"@typescript-eslint/parser": "^8.25.0",
		"@vscode/test-electron": "^2.5.2",
		"c8": "^10.1.3",
		"esbuild": "^0.24.2",
		"eslint": "^9.17.0",
		"fs-extra": "^11.3.2",
		"glob": "^11.0.3",
		"mocha": "^11.7.4",
		"typescript": "^5.7.2"
	},
	"dependencies": {
		"express": "^4.18.2"
	}
}
