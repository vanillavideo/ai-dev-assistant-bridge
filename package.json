{
	"name": "ai-feedback-bridge",
	"displayName": "AI Feedback Bridge",
	"description": "Bridge for AI coding assistants to receive feedback from terminals, tests, and other tools",
	"version": "0.7.0",
  "publisher": "local",
  "repository": {
    "type": "git",
    "url": "https://github.com/coreyolson/vscode-extension.git"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-feedback-bridge.showStatus",
        "title": "AI Feedback Bridge: Show Status"
      },
      {
        "command": "ai-feedback-bridge.toggleAutoContinue",
        "title": "AI Feedback Bridge: Toggle Auto-Continue"
      },
      {
        "command": "ai-feedback-bridge.runNow",
        "title": "AI Feedback Bridge: Run Now (Manual Trigger)"
      },
      {
        "command": "ai-feedback-bridge.getPort",
        "title": "AI Feedback Bridge: Get Current Port"
      },
      {
        "command": "ai-feedback-bridge.changePort",
        "title": "AI Feedback Bridge: Change Port"
      }
    ],
    "chatParticipants": [
      {
        "id": "ai-agent-feedback-bridge.agent",
        "fullName": "AI Agent Bridge",
        "name": "agent",
        "description": "Processes feedback from external AI agent systems",
        "isSticky": true
      }
    ],
    "configuration": {
      "title": "AI Feedback Bridge",
      "properties": {
        "aiFeedbackBridge.port": {
          "type": "number",
          "default": 3737,
          "scope": "resource",
          "description": "HTTP server port (auto-assigned per window)"
        },
        "aiFeedbackBridge.autoStart": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Auto-start server on launch"
        },
        "aiFeedbackBridge.autoContinue.enabled": {
          "type": "boolean",
          "default": false,
          "scope": "resource",
          "description": "Enable auto-continue reminders",
          "order": 0
        },
        "aiFeedbackBridge.autoContinue.tasks.enabled": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "üìã Tasks: Continue with current tasks",
          "order": 10
        },
        "aiFeedbackBridge.autoContinue.tasks.interval": {
          "type": "number",
          "default": 300,
          "scope": "resource",
          "description": "üìã Tasks interval (seconds)",
          "order": 11
        },
        "aiFeedbackBridge.autoContinue.tasks.message": {
          "type": "string",
          "default": "Continue with current tasks",
          "scope": "resource",
          "description": "üìã Tasks message",
          "order": 12
        },
        "aiFeedbackBridge.autoContinue.improvements.enabled": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "‚ú® Improvements: Code quality and optimizations",
          "order": 20
        },
        "aiFeedbackBridge.autoContinue.improvements.interval": {
          "type": "number",
          "default": 600,
          "scope": "resource",
          "description": "‚ú® Improvements interval (seconds)",
          "order": 21
        },
        "aiFeedbackBridge.autoContinue.improvements.message": {
          "type": "string",
          "default": "Focus on code improvements and optimizations",
          "scope": "resource",
          "description": "‚ú® Improvements message",
          "order": 22
        },
        "aiFeedbackBridge.autoContinue.coverage.enabled": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "üß™ Coverage: Testing and validation",
          "order": 30
        },
        "aiFeedbackBridge.autoContinue.coverage.interval": {
          "type": "number",
          "default": 900,
          "scope": "resource",
          "description": "üß™ Coverage interval (seconds)",
          "order": 31
        },
        "aiFeedbackBridge.autoContinue.coverage.message": {
          "type": "string",
          "default": "Review code coverage and add tests where needed",
          "scope": "resource",
          "description": "üß™ Coverage message",
          "order": 32
        },
        "aiFeedbackBridge.autoContinue.robustness.enabled": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "üõ°Ô∏è Robustness: Error handling and stability",
          "order": 40
        },
        "aiFeedbackBridge.autoContinue.robustness.interval": {
          "type": "number",
          "default": 600,
          "scope": "resource",
          "description": "üõ°Ô∏è Robustness interval (seconds)",
          "order": 41
        },
        "aiFeedbackBridge.autoContinue.robustness.message": {
          "type": "string",
          "default": "Prioritize code robustness and error handling",
          "scope": "resource",
          "description": "üõ°Ô∏è Robustness message",
          "order": 42
        },
        "aiFeedbackBridge.autoContinue.cleanup.enabled": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "üßπ Cleanup: Remove unused code and files",
          "order": 50
        },
        "aiFeedbackBridge.autoContinue.cleanup.interval": {
          "type": "number",
          "default": 1200,
          "scope": "resource",
          "description": "üßπ Cleanup interval (seconds)",
          "order": 51
        },
        "aiFeedbackBridge.autoContinue.cleanup.message": {
          "type": "string",
          "default": "Cleanup unused files and dead code",
          "scope": "resource",
          "description": "üßπ Cleanup message",
          "order": 52
        },
        "aiFeedbackBridge.autoContinue.commits.enabled": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "üíæ Commits: Save progress regularly",
          "order": 60
        },
        "aiFeedbackBridge.autoContinue.commits.interval": {
          "type": "number",
          "default": 900,
          "scope": "resource",
          "description": "üíæ Commits interval (seconds)",
          "order": 61
        },
        "aiFeedbackBridge.autoContinue.commits.message": {
          "type": "string",
          "default": "Commit your progress with clear messages",
          "scope": "resource",
          "description": "üíæ Commits message",
          "order": 62
        },
        "aiFeedbackBridge.autoApproval.enabled": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Enable auto-approval monitoring (requires manual console script setup)"
        },
        "aiFeedbackBridge.autoApproval.autoInject": {
          "type": "boolean",
          "default": false,
          "scope": "resource",
          "description": "Automatically inject approval script on startup (experimental)"
        },
        "aiFeedbackBridge.autoApproval.intervalMs": {
          "type": "number",
          "default": 2000,
          "scope": "resource",
          "description": "Auto-approval check interval in milliseconds"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "pretest": "npm run compile",
    "test": "node ./dist/test/runTest.js",
    "test:watch": "npm run watch & npm test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "~22.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.24.2",
    "eslint": "^9.17.0",
    "glob": "^11.0.3",
    "mocha": "^11.7.4",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "express": "^4.18.2"
  }
}
